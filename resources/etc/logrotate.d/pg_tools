
/var/log/pg_tools/pg_tools.log {
    daily
    missingok
    rotate 10
    compress
    delaycompress
    notifempty
    copytruncate
    create 640 root root
    sharedscripts
    postrotate
        [ -f /var/run/pg_tools/pg_tools.pid ] && kill -USR1 `cat /var/run/pg_tools/pg_tools.pid`
    endscript
}